
<div class="ui card fluid">
  <div class="content">
    <div class="header center aligned"><h2>Package ID - <%= @package.id %></h2></div>
    <div class="meta"><h4><%= @package.to_s %></h4></div>
    <div class="description">
         <h2 class="centered">Lessons</h2>
        <h3 class="col col-sm-4">Purchased: <%= @package.lessons_purchased %></h3>
              <h3 class="col col-sm-4">Used: <%= @package.lessons.count %></h3>
              <h3 class="col col-sm-4">Remaining: <%= @package.remaining %></h3>
    </div>
  </div>
  <div class="extra content">
    
  </div>
</div> 

    <div class="ui items">
  <% @package.lessons.each do  |l| %>
    
  
        <div class="content">
            
          <%= link_to l.start_time.strftime("%m/%d/%Y at %I:%M%p"), lessons_path %>
           <div class="description"><%= l.to_s %> - ID: <%= l.id %></div>
        </div>
    
  <% end %>
</div>

<%= link_to 'Edit', edit_package_path(@package) %> |
<%= link_to 'Back', packages_path %>

