<p id="notice"><%= notice %></p>

<h1>Packages</h1>

<%= link_to 'New Package', new_package_path, :class=> "ui button" %>
<table class="ui celled table">
  <thead>
    <tr>
      <th>Student</th>
      <th>Payment</th>
      <th>Lessons Purchased</th>
      <th>Lessons Used</th>
      <th>Activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.student.last_name %></td>
        <td><%= package.payment.payment_date %></td>
        <td><%= package.lessons_purchased %></td>
        <td><%= package.lessons.count %></td>
        <td><%= package.active %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

