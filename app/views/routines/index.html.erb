<h1>Routines</h1>

<%= link_to 'New Routine', new_routine_path, {:class => "ui button"} %>

<table class="ui table">
  <thead>
    <tr>
      <th>Student</th>
      <th>Level</th>
      <th>Category</th>
      <th>Dance</th>
      <th>Song</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routines.each do |routine| %>
      <tr>
        <td><%= routine.student %></td>
        <td><%= routine.level %></td>
        <td><%= routine.category %></td>
        <td><%= routine.dance %></td>
        <td><%= routine.song %></td>
        <td><%= link_to 'Show', routine %></td>
        <td><%= link_to 'Edit', edit_routine_path(routine) %></td>
        <td><%= link_to 'Destroy', routine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>