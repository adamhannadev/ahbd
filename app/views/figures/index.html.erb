<h1>Figures</h1>
<%= link_to 'New Figure', new_figure_path, class: "ui button" %>
<table class="ui unstackable table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Level</th>
      <th>Dance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @figures.each do |figure| %>
      <tr>
        <td><%= figure.title %></td>
        <td><%= figure.description %></td>
        <td><%= figure.level %></td>
        <td><%= figure.dance %></td>
        <td><%= link_to 'Show', figure %></td>
        <td><%= link_to 'Edit', edit_figure_path(figure) %></td>
        <td><%= link_to 'Destroy', figure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>




