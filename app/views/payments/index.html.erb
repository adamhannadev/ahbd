
<h1>Payments</h1>

<%= link_to 'New Payment', new_payment_path, :class => "ui button" %>
<table class="ui sortable unstackable table">
  <thead>
    <tr>
      <th>Student</th>
      <th>Payment date</th>
      <th>Payment type</th>
      <th>Amount</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.student.last_name %></td>
        <td><%= I18n.l payment.payment_date, format: :long %></td>
        <td><%= payment.payment_type %></td>
        <td><%= number_to_currency payment.amount %></td>
        <td><%= payment.description %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

