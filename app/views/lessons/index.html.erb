<p id="notice"><%= notice %></p>

<h1 class="ui header">Lessons</h1>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Student</th>
      <th>Lesson date</th>
      <th>Plan</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.student.last_name %></td>
        <td><%= lesson.lesson_date.strftime("%a, %d %b %Y (%l:%M%P)") %></td>
        <td><%= lesson.plan %></td>
        <td><%= lesson.status %></td>
        <td><%= link_to 'Show', lesson %></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
        <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lesson', new_lesson_path, class: "ui button" %>
